<div class="devise-container">
  <div class="devise-content">
    <div class="devise-form">
      <div class="form-inputs">
        <%= simple_form_for(current_user) do |f| %>
            <%= f.input :email %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
        <% end %>
    </div>
  </div>
</div>
