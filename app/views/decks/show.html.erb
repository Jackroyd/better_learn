<div class=container>
  <div class="show-container">
  <div class="col-6">
    <br>
    <h1 style="font-size:50px;"><%= @deck.name %></h1>
    <br>
    <h3><%= @deck.description %></h3>
    <br>
     <div class="decks-btn">
        <%= link_to "Play Deck", deck_cards_path(@deck), class: "main-btn", id: "main-btn-deck" %>
      </div>
      <br>
      <div class="decks-btn">
        <%= link_to "Share Deck", new_deck_path, class: "main-btn", id: "main-btn-deck" %>
      </div>
      <br>
      <div class="decks-btn">
        <%= link_to "Edit Deck", edit_deck_path(@deck), class: "main-btn", id: "main-btn-deck" %>
      </div>
      <br>
      <div class="decks-btn">
        <%= link_to "Delete Deck",
              deck_path(@deck),
              method: :delete,
              class: "delete-btn",
              data: { confirm: "Are you sure?" } %>
      </div>
      <br>
  </div>

  <div class="col-6">
    <%= render 'shared/preview_card', deck: @deck, cards: @cards%>
    <br>
    <%= render 'shared/stats_card', deck: @deck%>

  </div>
</div>
